<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiMasters.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiMasters"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Grocery List"
        ContentTemplate="{DataTemplate local:GroceryList}"
        Route="GroceryList"/>

    <ShellContent
        Title="Checkout Cart"
        ContentTemplate="{DataTemplate local:CheckoutCart}"
        Route="CartSummary"/>

    <ShellContent
        Title="Thank You"
        ContentTemplate="{DataTemplate local:ThankYou}"
        Route="ThankYou"/>

</Shell>
